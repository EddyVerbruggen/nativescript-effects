<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout>
    <Label text="Tap the button" class="title" id="lblTitle"/>
    <Button text="TAP" tap="{{ tapAction }}" id="btnTap" />
    <Label text="{{ message }}" class="message" textWrap="true" id="lblCounter"/>
  </StackLayout>
</Page>
