{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "files": [
        "references.d.ts",
        "tns-effects-common.ts",
        "tns-effects.android.ts",
        "tns-effects.ios.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "demo",
        "demo3rc"
    ]
}